{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "jsx": "react",
    "sourceMap": false,
    "declaration": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "removeComments": true,
    "typeRoots": ["index.d.ts", "node_modules/@types"]
  },
  "include": [
    "./src/lib/**/*.tsx",
    "./src/lib/**/*.ts"
  ],
  "exclude": ["node_modules"]
}